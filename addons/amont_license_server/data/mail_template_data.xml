<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Email template for license expiration reminder -->
        <record id="mail_template_license_expiration_reminder" model="mail.template">
            <field name="name">Amont License: Expiration Reminder</field>
            <field name="model_id" ref="amont_license_server.model_amont_server_client"/>
            <field name="subject">License Expiration Reminder - {{ ctx.get('company_name') }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="partner_to">{{ ctx.get('partner_id') }}</field>
            <field name="description">Sent to remind users about license expiration</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                    <tr>
                        <td align="center">
                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                                <tbody>
                                    <!-- HEADER -->
                                    <tr>
                                        <td style="padding: 16px; text-align: center; border-bottom: 1px solid #D1D1D1;">
                                            <h1 style="margin: 0px; color: #875A7B; font-size: 24px; font-weight: bold;">
                                License Expiration Reminder
                                            </h1>
                                        </td>
                                    </tr>
                                    <!-- CONTENT -->
                                    <tr>
                                        <td style="padding: 16px;">
                                            <p style="margin: 0px; padding: 0px; font-size: 13px;">
                                Dear <t t-out="ctx.get('partner_name', 'User')"/>
,
                                            <br/>
                                            <br/>
                                This is a reminder that your <strong>Amont License</strong> for <strong>
                                            <t t-out="ctx.get('company_name')"/>
                                        </strong> 
                                will expire in <strong style="color: #875A7B;">
                                        <t t-out="ctx.get('days_remaining')"/>
 days</strong>.
                                    <br/>
                                    <br/>
                                    <strong>License Details:</strong>
                                    <ul>
                                        <li>Company: <t t-out="ctx.get('company_name')"/>
                                        </li>
                                        <li>Expiration Date: <t t-out="ctx.get('end_date')"/>
                                        </li>
                                        <li>Days Remaining: <t t-out="ctx.get('days_remaining')"/>
                                        </li>
                                    </ul>
                                    <br/>
                                To ensure uninterrupted service, please contact your administrator to renew your license before it expires.
                                    <br/>
                                    <br/>
                                If you have any questions or need assistance, please don't hesitate to contact your system administrator.
                                    <br/>
                                    <br/>
                                Best regards,<br/>
                                <t t-out="user.name"/>
                                <t t-if="user.signature">
                                    <br/>
                                    <br/>
                                    <t t-out="user.signature"/>
                                </t>
                            </p>
                        </td>
                    </tr>
                    <!-- FOOTER -->
                    <tr>
                        <td style="padding: 16px; text-align: center; border-top: 1px solid #D1D1D1; color: #875A7B; font-size: 12px;">
                            <p style="margin: 0px; padding: 0px;">
                                This is an automated reminder. Please do not reply to this email.
                            </p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>
</table>
</field>
<field name="lang">{{ ctx.get('lang') or user.lang }}</field>
<field name="auto_delete" eval="True"/>
</record>

<!-- Email template for license expired -->
<record id="mail_template_license_expired" model="mail.template">
<field name="name">Amont License: Expired</field>
<field name="model_id" ref="amont_license_server.model_amont_server_client"/>
<field name="subject">URGENT: License Expired - {{ ctx.get('company_name') }}</field>
<field name="email_from">{{ user.email_formatted }}</field>
<field name="partner_to">{{ ctx.get('partner_id') }}</field>
<field name="description">Sent when license has expired</field>
<field name="body_html" type="html">
<table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
    <tr>
        <td align="center">
            <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                <tbody>
                    <!-- HEADER -->
                    <tr>
                        <td style="padding: 16px; text-align: center; border-bottom: 1px solid #D1D1D1;">
                            <h1 style="margin: 0px; color: #D32F2F; font-size: 24px; font-weight: bold;">
                                ⚠️ LICENSE EXPIRED
                            </h1>
                        </td>
                    </tr>
                    <!-- CONTENT -->
                    <tr>
                        <td style="padding: 16px;">
                            <p style="margin: 0px; padding: 0px; font-size: 13px;">
                                Dear <t t-out="ctx.get('partner_name', 'User')"/>
,
                            <br/>
                            <br/>
                            <strong style="color: #D32F2F;">URGENT:</strong> Your <strong>Amont License</strong> for <strong>
                            <t t-out="ctx.get('company_name')"/>
                        </strong> 
                                has <strong style="color: #D32F2F;">EXPIRED</strong>.
                        <br/>
                        <br/>
                        <strong>License Details:</strong>
                        <ul>
                            <li>Company: <t t-out="ctx.get('company_name')"/>
                            </li>
                            <li>Expiration Date: <t t-out="ctx.get('end_date')"/>
                            </li>
                            <li>Status: <strong style="color: #D32F2F;">EXPIRED</strong>
                            </li>
                        </ul>
                        <br/>
                        <strong style="color: #D32F2F;">Immediate action is required!</strong> Please contact your administrator immediately to renew your license.
                        <br/>
                        <br/>
                                Some system features may be limited until the license is renewed.
                        <br/>
                        <br/>
                                Best regards,<br/>
                    <t t-out="user.name"/>
                    <t t-if="user.signature">
                        <br/>
                        <br/>
                        <t t-out="user.signature"/>
                    </t>
                </p>
            </td>
        </tr>
        <!-- FOOTER -->
        <tr>
            <td style="padding: 16px; text-align: center; border-top: 1px solid #D1D1D1; color: #875A7B; font-size: 12px;">
                <p style="margin: 0px; padding: 0px;">
                                This is an automated reminder. Please do not reply to this email.
                </p>
            </td>
        </tr>
    </tbody>
</table>
</td>
</tr>
</table>
</field>
<field name="lang">{{ ctx.get('lang') or user.lang }}</field>
<field name="auto_delete" eval="True"/>
</record>

</data>
</odoo> 